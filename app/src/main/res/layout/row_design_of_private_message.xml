<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/private_message_row_design_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="4dp">


//other user view
        <LinearLayout
            android:id="@+id/otherUserLinearLayour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <TextView

                android:id="@+id/private_chat_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:padding="5dp"
                android:layout_gravity="left"
                android:text="message" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/private_chat_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="sent by"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/private_chat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="time" />

        </LinearLayout>
        </LinearLayout>


    //loged in user view

    <LinearLayout
        android:id="@+id/logedInUserLinearLayour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp">

        <TextView

            android:id="@+id/private_chat_message_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
           android:layout_gravity="right"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"

            android:text="message" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/private_chat_sender_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="sent by"
                android:layout_weight="1"
                />

            <TextView

                android:id="@+id/private_chat_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_weight="1"/>

    </LinearLayout>

        </LinearLayout>



</LinearLayout>