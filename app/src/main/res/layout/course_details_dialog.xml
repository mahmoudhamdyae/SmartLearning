<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp">

    <TextView
        android:id="@+id/course_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/course_details_course_name" />

    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/course_name_text"
        android:layout_toRightOf="@+id/course_name_text" />

    <TextView
        android:id="@+id/teacher_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_name_text"
        android:layout_margin="8dp"
        android:text="@string/course_details_teacher_name" />

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/teacher_name_text"
        android:layout_toEndOf="@+id/teacher_name_text"
        android:layout_toRightOf="@+id/teacher_name_text" />

    <TextView
        android:id="@+id/year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacher_name_text"
        android:layout_margin="8dp"
        android:text="@string/course_details_year" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/year_text"
        android:layout_toEndOf="@+id/year_text"
        android:layout_toRightOf="@+id/year_text" />

    <TextView
        android:id="@+id/number_of_students_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/year_text"
        android:layout_margin="8dp"
        android:text="@string/course_details_number_of_students" />

    <TextView
        android:id="@+id/number_of_students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/number_of_students_text"
        android:layout_toEndOf="@+id/number_of_students_text"
        android:layout_toRightOf="@+id/number_of_students_text" />

</RelativeLayout>