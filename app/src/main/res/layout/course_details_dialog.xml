<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/list_item_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
   app:cardElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <ImageView
        android:id="@+id/imgg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/course_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/imgg"
        android:text="Course details"
        android:textColor="#213335"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imgg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/course_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="38dp"
        android:text="@string/course_details_course_name"
        android:textColor="#213335"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="38dp"
        android:textColor="#4e4e94"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/course_name_text"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:text="math" />

    <TextView

        android:id="@+id/teacher_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/course_details_teacher_name"
        android:textColor="#213335"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_name_text" />

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:textColor="#4e4e94"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/teacher_name_text"
        app:layout_constraintTop_toBottomOf="@+id/course_name"
        tools:text="amr" />

    <TextView
        android:id="@+id/year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/course_details_year"
        android:textColor="#213335"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_name_text" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:textColor="#4e4e94"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/year_text"
        app:layout_constraintTop_toBottomOf="@+id/teacher_name_text"
        tools:text="3" />

    <TextView
        android:id="@+id/number_of_students_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/course_details_number_of_students"
        android:textColor="#213335"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year_text" />

    <TextView
        android:id="@+id/number_of_students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:textColor="#4e4e94"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/number_of_students_text"
        app:layout_constraintTop_toBottomOf="@+id/year"
        tools:text="115" />

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>